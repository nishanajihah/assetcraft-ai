# AssetCraft AI Environment Configuration
# This is the PRODUCTION environment file
# Copy this file and modify for your production setup

# Environment Stage
ENVIRONMENT=production

# API URLs
PROD_API_URL=https://api.assetcraft.ai
DEV_API_URL=https://dev-api.assetcraft.ai
STAGING_API_URL=https://staging-api.assetcraft.ai

# Supabase Configuration
SUPABASE_URL=your_production_supabase_url_here
SUPABASE_ANON_KEY=your_production_supabase_anon_key_here

# OneSignal App ID
ONESIGNAL_APP_ID=YOUR_ONESIGNAL_APP_ID

# RevenueCat Public API Keys
REVENUECAT_IOS_KEY=YOUR_REVENUECAT_IOS_KEY
REVENUECAT_ANDROID_KEY=YOUR_REVENUECAT_ANDROID_ANDROID_KEY

# Google AI Configuration
GEMINI_API_KEY=your_production_gemini_api_key_here
GEMINI_TEXT_MODEL=gemini-1.5-flash
GEMINI_SUGGESTIONS_MODEL=gemini-1.5-flash

# Google Cloud Imagen Configuration (for image generation)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
IMAGEN_MODEL=imagen-3.0-generate-001

# Paddle Configuration (for web payments)
PADDLE_VENDOR_ID=your_production_paddle_vendor_id_here
PADDLE_API_KEY=your_production_paddle_api_key_here

# Feature Flags
ENABLE_MOCK_AI=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SOCIAL_SHARING=true
ENABLE_OFFLINE_MODE=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ADS=true
ENABLE_ANALYTICS=true
ENABLE_SPLASH_SCREEN=true
SKIP_AUTHENTICATION=false
